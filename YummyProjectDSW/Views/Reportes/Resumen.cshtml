@{
    ViewData["Title"] = "Reporte de Ventas (QuestPDF)";

    // Lee las fechas desde el querystring (soporta carga directa por URL)
    DateTime? desde = new DateTime(2025, 1, 1), hasta = new DateTime(2025, 12, 31);

    var qDesde = Context.Request.Query["desde"].ToString();
    var qHasta = Context.Request.Query["hasta"].ToString();

    if (DateTime.TryParse(qDesde, out var d1)) desde = d1;
    if (DateTime.TryParse(qHasta, out var d2)) hasta = d2;

    // Formatea para inputs <input type="date">
    string desdeInput = desde?.ToString("yyyy-MM-dd") ?? "";
    string hastaInput = hasta?.ToString("yyyy-MM-dd") ?? "";

    // Armamos la URL al endpoint que genera el PDF
    string urlPdf = Url.Action("Index", "Reportes", new
    {
        // Pasamos ISO para que el model binder lo parsee igual en cualquier cultura
        desde = string.IsNullOrEmpty(desdeInput) ? null : desdeInput,
        hasta = string.IsNullOrEmpty(hastaInput) ? null : hastaInput
    }) ?? "#";
}

<section class="hero-wrap">
    <div class="home-slider owl-carousel js-fullheight">
        <div class="slider-item js-fullheight" style="background-image:url('@Url.Content("~/images/bg_3.jpg")');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                    <div class="col-md-12 ftco-animate">
                        <div class="text w-100 mt-5 text-center">
                            <span class="subheading">Reportes</span>
                            <h1>Reporte de Ventas</h1>
                            <span class="subheading-2">Análisis detallado</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb ftco-intro bg-primary">
    <div class="container py-5">
        <div class="row py-2">
            <div class="col-md-12 text-center">
                <h2>Genera reportes de ventas</h2>
                <p>Selecciona el rango de fechas para visualizar el resumen de ventas</p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-8 text-center heading-section ftco-animate">
                <span class="subheading">Análisis</span><br />
                <h2 class="mb-4">Reporte de Ventas</h2>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <form method="get" action="@Url.Action("Resumen","Reportes")" class="mb-4" autocomplete="off">
                            <div class="row align-items-end">
                                <div class="col-md-3">
                                    <label for="desde" class="form-label fw-bold">Desde</label>
                                    <input id="desde" name="desde" type="date" value="@desdeInput" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label for="hasta" class="form-label fw-bold">Hasta</label>
                                    <input id="hasta" name="hasta" type="date" value="@hastaInput" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fa fa-search"></i> Ver Reporte
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    @if (!string.IsNullOrEmpty(desdeInput) || !string.IsNullOrEmpty(hastaInput))
                                    {
                                        <a href="@urlPdf" target="_blank" rel="noopener" class="btn btn-outline-primary w-100">
                                            <i class="fa fa-file-pdf-o"></i> Abrir PDF
                                        </a>
                                    }
                                </div>
                            </div>
                        </form>

                        @if (!string.IsNullOrEmpty(desdeInput) || !string.IsNullOrEmpty(hastaInput))
                        {
                            <div class="mt-4">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i>
                                    <strong>Rango seleccionado:</strong> 
                                    Desde @(desde?.ToString("dd/MM/yyyy")) hasta @(hasta?.ToString("dd/MM/yyyy"))
                                </div>
                                
                                <div class="border rounded" style="height:70vh;">
                                    <iframe src="@urlPdf"
                                            width="100%" height="100%" style="border:0; border-radius: 0.375rem;"
                                            title="Reporte de Ventas (PDF)">
                                    </iframe>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-calendar fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">Selecciona un rango de fechas</h4>
                                <p class="text-muted">Elige las fechas de inicio y fin, luego pulsa <strong>Ver Reporte</strong> para generar el análisis.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb ftco-intro bg-light">
    <div class="container py-5">
        <div class="row py-2">
            <div class="col-md-12 text-center">
                <a asp-controller="Home" asp-action="ManGeneral" class="btn btn-primary">
                    <i class="fa fa-arrow-left"></i> Volver al Menú Principal
                </a>
            </div>
        </div>
    </div>
</section>
