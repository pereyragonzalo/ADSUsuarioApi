@model IEnumerable<yummyApp.Models.ProductoModel>

@{
    ViewData["Title"] = "TiendaGeneral";
}

<div class="container mt-5">
    <h1 class="mb-4 display-6 fw-bold text-primary">Tienda General</h1>

    <form asp-controller="Home" asp-action="LlevarAlCarrito" method="post">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Seleccionar</th>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Cantidad</th> <!-- 👈 Nueva columna -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr>
                            <td class="text-center">
                                <input class="form-check-input" type="checkbox" name="productosSeleccionados" value="@item.id_producto" />
                            </td>
                            <td>@item.id_producto</td>
                            <td>@item.nombre</td>
                            <td>@item.precio.ToString("C")</td>
                            <td>@item.stock</td>
                            <td>
                                <input type="number"
                                       name="cantidades[@item.id_producto]"
                                       class="form-control"
                                       min="1"
                                       max="@item.stock"
                                       value="1" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                Adicionar al carrito
            </button>
        </div>
    </form>
</div>