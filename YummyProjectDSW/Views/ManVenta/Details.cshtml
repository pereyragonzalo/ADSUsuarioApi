@model yummyApp.Models.Venta

@{
    ViewData["Title"] = "Detalles de Venta";
}

<div class="container mt-5">
    <h1 class="mb-4 display-6 fw-bold text-primary">Detalles de Venta</h1>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-bold">Información de la Venta</div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">ID Usuario</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.idUsuario)</dd>

                <dt class="col-sm-3">Fecha de Venta</dt>
                <dd class="col-sm-9">@Model.fechaVenta.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                @* Si deseas mostrar el estado, descomenta estas líneas
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.estado)</dd>
                *@

                <dt class="col-sm-3">Nombre de Usuario</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.usuario)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.idVenta" class="btn btn-warning px-4">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Regresar</a>
    </div>
</div>